<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jgallery="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.soubw.jgallery.JGallery
        android:id="@+id/jGallery"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        jgallery:JGallery_indicator_gravity="right_bottom"
        jgallery:JGallery_default_image="@drawable/jgallery_bg"
        jgallery:JGallery_indicator_style="number"
        jgallery:JGallery_auto_play="false"
        jgallery:JGallery_auto_loop="false"/>
</RelativeLayout>
